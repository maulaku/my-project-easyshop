<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:mxml="http://www.mresolucoes.com.br/2010/mxml"
		  width="400" height="300">
	<fx:Script>
		<![CDATA[
			import br.com.easyShop.comunicacao.MRemoteObject;
			import br.com.easyShop.comunicacao.ResultJava;
			import br.com.easyShop.model.Categoria;
			
			import mx.controls.Alert;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			protected function result(event:ResultEvent):void
			{
				//retorno do objeto do java;
				Alert.show(event.message.body as String);
			}
			
			protected function escutaBotoes(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				var categoria:Categoria;
//				ro.inserirCategoria(null);
				MRemoteObject.get("CategoriaService.inserirCategoria", [null], volta);
			}
			
			protected function erro(event:FaultEvent):void
			{
				Alert.show(event.fault.toString());
			}
			
			public function volta(result:ResultJava):void
			{
				Alert.show(result.item as String);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<s:RemoteObject id="ro" destination="DJava" result="result(event)" fault="erro(event)"/>
		
	</fx:Declarations>
	
	<mxml:MBotao x="200" y="178" click="escutaBotoes(event)"/>
</s:Module>
