				xmlns:tabela="br.com.mresolucoes.renders.tabela.*"
				width="768" height="548" backgroundAlpha="0.39" backgroundColor="#F1F4F4"
				close="PopUpManager.removePopUp(this)" creationComplete="construtor()"
				dropShadowVisible="true" layout="absolute" removedEffect="fechar"
				title="Meu Carrinho">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script source="MeuCarrinhoScript.as" />
	
	<s:BorderContainer x="26" y="21" width="710" height="332" backgroundAlpha="0.52"
					   backgroundColor="#F2F2F2">

		<mxml:MTabela x="24" y="19" width="664" height="157" id="tblCarrinho" mreDataProvider="{dados}" editable="true" >
