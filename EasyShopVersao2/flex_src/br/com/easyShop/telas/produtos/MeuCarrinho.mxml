				<mx:DataGridColumn dataField="campo2" headerText="Quantidade" width="120"/>
				<mx:DataGridColumn dataField="campo3" headerText="Valor Unitário" width="120"/>
				<mx:DataGridColumn dataField="campo4" headerText="Valor Parcial" width="120"/>
				<mx:DataGridColumn id="colunaRemoverProponente" headerText="Remover" width="34" textAlign="center" editable="false" resizable="false" draggable="false" sortable="false">
					<mx:itemRenderer>
						<fx:Component>
							<tabela:MRGridBotaoRemover>
							</tabela:MRGridBotaoRemover>
						</fx:Component>
					</mx:itemRenderer>
				</mx:DataGridColumn>
			</mxml:columns>
		</mxml:MTabela>
		
		<mx:HRule x="56" y="186" width="613" height="13"/>
		<s:Label x="390" y="200" width="152" height="23" fontFamily="Verdana" fontSize="16"
				 text="Frete:" textAlign="right" verticalAlign="middle"/>
		<s:Label x="390" y="239" width="152" height="23" fontFamily="Verdana" fontSize="16"
				 text="Valor do Carrinho:" textAlign="right" verticalAlign="middle"/>
		<mx:HRule x="56" y="224" width="613" height="13"/>
		<mx:HRule x="56" y="262" width="613" height="13"/>
		<mx:VRule x="54" y="191" width="6" height="114"/>
		<mx:VRule x="665" y="191" width="4" height="114"/>
		<s:Label id="lblFrete" x="546" y="204" fontFamily="Verdana" fontSize="15" fontWeight="bold"
				 textAlign="left" verticalAlign="middle"/>
		<s:Label id="lblValorCarrinho" x="546" y="243" fontFamily="Verdana" fontSize="15"
				 fontWeight="bold" textAlign="left" verticalAlign="middle"/>
		<mx:HRule x="56" y="299" width="613" height="13"/>
		<s:Label x="390" y="276" width="152" height="23" fontFamily="Verdana" fontSize="16"
				 fontWeight="bold" text="Valor Total:" textAlign="right" verticalAlign="middle"/>
		<s:Label id="lblValorTotal" x="547" y="279" fontFamily="Verdana" fontSize="16"
				 fontWeight="bold" textAlign="left" verticalAlign="middle"/>	
		
		
	</s:BorderContainer>
	<s:Button id="btnContinuarComprando" x="143" y="451" width="210" height="38"
			  label="Continuar Comprando" fontSize="14" fontWeight="bold"
			  icon="@Embed('../../imagens/botoes/back.png')" click="btnContinuarComprando_clickHandler(event)"/>
	<s:Button id="btnFinalizarCompra" x="428" y="451" width="200" height="38"
			  label="Finalizar Carrinho" fontSize="14" fontWeight="bold"
			  icon="@Embed('../../imagens/botoes/money.png')" click="btnFinalizarCarrinho_clickHandler(event)"/>
	<s:Label x="171" y="376" width="201" height="23" fontFamily="Verdana" fontSize="18"
			 text="Endereço de Entrega:" textAlign="center" verticalAlign="middle"/>
	<mx:HRule x="235" y="417" width="311" height="17"/>
	<mxml:MComboBox id="cboEnderecoEntrega" x="380" y="376" width="231" labelFunction="labelEndereco"/>
	
