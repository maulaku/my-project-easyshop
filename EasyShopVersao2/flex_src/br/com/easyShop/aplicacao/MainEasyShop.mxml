<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:mxml="http://www.mresolucoes.com.br/2010/mxml"
			   xmlns:comboLOD="br.com.easyShop.componentes.comboLOD.*"
			   xmlns:tabela="br.com.mresolucoes.renders.tabela.*"
			   width="1259" height="1472" backgroundAlpha="1.0"
			   creationComplete="construtor()" pageTitle="EasyShop" xmlns:componentes="br.com.easyShop.componentes.*" xmlns:model="br.com.easyShop.model.*" xmlns:ns="http://hamcrest.org/2009/mxml"
			   xmlns:flexlib="http://code.google.com/p/flexlib/" xmlns:modulo="br.com.easyShop.componentes.modulo.*">
	<fx:Style source="MainEasyShop.css"/>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Parallel id="fechar">
			<mx:Zoom />
			<mx:Fade />
		</mx:Parallel>
		
		<mx:Resize id="aumentar" duration="150" widthTo="150" heightTo="60"/>
		<mx:Resize id="diminuir" duration="200" widthTo="90" heightTo="40"/>
		
		<s:Fade id="anSumir" alphaFrom="1" alphaTo="0" duration="300"/>
		<s:Fade id="anAparecer" alphaFrom="0" alphaTo="1" duration="900" />		
	</fx:Declarations>
	
	<fx:Script source="MainEasyShopScript.as" />

		<s:Image x="-156" y="-69" width="1493" height="682" smooth="true" source="@Embed('../imagens/aplicacao/fundo.png')"/>
		<s:Image id="btnCarrinho" x="882" y="49" width="70" height="64" buttonMode="true" smooth="true" smoothingQuality="high" toolTip="Meu Carrinho"
				 source="@Embed('../imagens/aplicacao/icone_carrinho.png')" click="btnCarrinho_clickHandler(event)"/>
		
		<s:Image x="-58" y="-45" width="650" height="319" scaleMode="stretch" smooth="true"
				 smoothingQuality="high" source="@Embed('../imagens/aplicacao/nomEasy.png')"/>
		
		<s:Image id="btnDesejo" x="1055" y="54" width="83" height="59" buttonMode="true" smooth="true" smoothingQuality="high" toolTip="Meus Desejos"
				 source="@Embed('../imagens/aplicacao/desejo.png')" click="btnDesejo_clickHandler(event)"/>
		
		<modulo:PainelModulo id="grPainelModulos" visible="true" x="274" y="222" width="945"
							 height="579" contentBackgroundColor="#FFFFFF" hideEffect="{anSumir}"
							 showEffect="{anAparecer}">
		</modulo:PainelModulo>
		<mxml:MModulo id="modulo" x="274" y="222" width="945" height="1182"
					  contentBackgroundColor="#FFFFFF">
		</mxml:MModulo>
		
		<mxml:MComboBox id="cbCategorias" x="188" y="154" width="207" height="27" labelField="nome"/>
		
		<s:Label x="118" y="154" width="65" height="31" color="#F0F2F9" fontFamily="Verdana"
				 fontSize="15" fontWeight="bold" text="BUSCA" textAlign="center" verticalAlign="middle"/>
		<comboLOD:MComboLOD id="cbBusca" x="398" y="154" width="659" height="27"
							mreLabelFunction="lfProduto" mreMinimoCaracteres="3"/>
		<s:Button x="1060" y="154" width="81" height="28" label="Buscar" fontFamily="Verdana"
				  fontSize="14"/>
		<s:Label x="452" y="1423" width="355" height="19" fontSize="15"
				 text="Créditos sobre o Site ficaram aqui" textAlign="center" verticalAlign="middle"/>
		
		<mx:Panel id="panelCategorias" x="21" y="221" width="249" height="580" fontSize="15"
				  styleName="Panel" textAlign="center" verticalAlign="middle">
			<flexlib:VAccordion id="accordion" headerLocation="below"
								resizeToContent="true" styleName="VAccordion" height="100%"
								width="100%"
								headerHeight="32"
								borderStyle="none">			
			</flexlib:VAccordion>
		</mx:Panel>
		<s:Image id="btnPedido" x="977" y="49" width="70" height="64" buttonMode="true" toolTip="Meus Pedidos"
				 click="btnPedido_clickHandler()" smooth="true" smoothingQuality="high"
				 source="@Embed('../imagens/aplicacao/pedidos.png')"/>
		<s:Image x="1143" y="48" buttonMode="true"
				 click="btnEntrar_clickHandler()" smooth="true" smoothingQuality="high"
				 source="@Embed('../imagens/aplicacao/user3.png')" toolTip="Entrar/Cadastrar"/>
		<s:Label x="29" y="23" width="482" height="117" click="construtor()" toolTip="Início" buttonMode="true"/>	

</s:Application>
