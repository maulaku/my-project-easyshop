		<mx:HBox id="menuDinamico" x="-5" y="76" width="100%" height="74" clipContent="true"
				 horizontalAlign="center" horizontalScrollPolicy="off" verticalAlign="bottom"
				 verticalScrollPolicy="off">
			</mx:HBox>
		<mxml:MBotao id="btTeste" x="748" y="10" label="teste" click="btTeste_clickHandler()"/>
		<s:Label x="371" y="1496" width="355" height="19" fontSize="15"
				 text="CrÃ©ditos sobre o Site ficaram aqui" textAlign="center" verticalAlign="middle"/>
		
