				 text="Créditos sobre o Site ficaram aqui" textAlign="center" verticalAlign="middle"/>
		
		
		
		<mx:HBox id="menuDinamico" x="-5" y="68" width="100%" height="82" clipContent="true"
				 horizontalAlign="center" horizontalScrollPolicy="off" verticalAlign="bottom"
				 verticalScrollPolicy="off">
			<s:Button x="1001" y="262" height="40" label="Eletrodomestico" fontFamily="Verdana" fontSize="14" useHandCursor="true" mouseOut="mouseOut(event)" mouseOver="mouseOver(event)"/>
