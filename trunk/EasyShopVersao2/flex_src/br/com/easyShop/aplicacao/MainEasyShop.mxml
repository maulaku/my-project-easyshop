<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:mxml="http://www.mresolucoes.com.br/2010/mxml"
			   xmlns:comboLOD="br.com.easyShop.componentes.comboLOD.*"
			   xmlns:tabela="br.com.mresolucoes.renders.tabela.*"
			   width="100%" height="1000" backgroundAlpha="1.0"
			   creationComplete="construtor()" pageTitle="EasyShop">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Parallel id="fechar">
			<mx:Zoom />
			<mx:Fade />
		</mx:Parallel>
		
		<mx:Resize id="aumentar" duration="150" widthTo="200" heightTo="60"/>
		<mx:Resize id="diminuir" duration="200" widthTo="120" heightTo="40"/>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			import mx.controls.Alert;
			
			public function mouseOver(evt:MouseEvent):void{
				aumentar.play([evt.currentTarget]);
			}
			
			public function mouseOut(evt:MouseEvent):void{
				diminuir.play([evt.currentTarget]);
			}
			
		]]>
	</fx:Script>
	
	<fx:Script source="MainEasyShopScript.as" />
	
	<s:Panel id="panelPrincipal" x="2" y="1" width="1273" height="100%">
		
		<s:Image x="-15" y="-130" width="1306" height="682" smooth="true" source="@Embed('../imagens/aplicacao/fundo.png')"/>
