				 smoothingQuality="high" source="@Embed('../imagens/aplicacao/user3.png')"/>
		
		<mxml:MModulo  id="modulo" x="219" y="184" width="985" height="559">
			<s:VScrollBar x="963" y="0" width="17" height="559" viewport="{modulo}" id="ScrollBar" visible="false"/>
