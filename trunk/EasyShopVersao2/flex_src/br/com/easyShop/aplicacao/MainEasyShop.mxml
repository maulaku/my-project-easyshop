	<fx:Style source="MainEasyShop.css"/>
	
	<fx:Style>
		.mainBox {
		padding-top:10;
		padding-left:10;
		padding-right:10;
		vertical-gap:0;	
		}
		
		.title {
		font-weight: bold;
		color: #333333;
		font-size: 16;	
		}
		
		.description {
		font-weight: normal;
		color: #666666;
		font-size: 12;	
		}
	</fx:Style>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<mx:Parallel id="fechar">
			<mx:Zoom />
			<mx:Fade />
		</mx:Parallel>
		
		<mx:Resize id="aumentar" duration="150" widthTo="200" heightTo="60"/>
		<mx:Resize id="diminuir" duration="200" widthTo="120" heightTo="40"/>
	
	</fx:Declarations>

	<fx:Script source="MainEasyShopScript.as" />
	
	<s:Panel id="panelPrincipal" x="2" y="1" width="1273" height="1565">
		
