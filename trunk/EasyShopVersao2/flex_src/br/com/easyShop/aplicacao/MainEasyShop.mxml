				  styleName="Panel" textAlign="center" title="Categorias" verticalAlign="middle">
			<flexlib:VAccordion id="accordion" headerLocation="below"
								resizeToContent="true" styleName="VAccordion" height="100%"
								width="100%"
								headerHeight="32"
								borderStyle="none">			
			</flexlib:VAccordion>
		</mx:Panel>
		<s:Image id="btnPedido" x="999" y="-18" width="70" height="64" buttonMode="true"
				 click="btnPedido_clickHandler()" smooth="true" smoothingQuality="high"
				 source="@Embed('../imagens/aplicacao/pedidos.png')"/>
	</s:Panel>
</s:Application>
