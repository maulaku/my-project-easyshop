			<s:Button height="40" label="Informática" fontFamily="Verdana" fontSize="14"
					  mouseOut="mouseOut(event)" mouseOver="mouseOver(event)" useHandCursor="true"/>
			<s:Button x="1001" y="262" height="40" label="Automóvel" fontFamily="Verdana" fontSize="14" useHandCursor="true" mouseOut="mouseOut(event)" mouseOver="mouseOver(event)"/>
			<s:Button x="1001" y="262" height="40" label="Roupas" fontFamily="Verdana" fontSize="14" useHandCursor="true" mouseOut="mouseOut(event)" mouseOver="mouseOver(event)"/>
